<% events = @events.collect(&:title) %>
<div class="row">
  <span id="fixtures"><%= link_to "Fixtures", "#" %></span>
  <span id="results" class="active"><%= link_to "Results", "#" %></span>
  <div class="fixtures" style="display: none;">
    <div id="fixture-scrollable">
      <% if @match_fixtures.any? %>
        <% j = 0 %>
          <% @match_fixtures.each_with_index do |match,index| %>
            <li>
              <% @events.each do |event| %>
                <%= event.title if event.id.eql?(match.event_id) %>
              <% end %> |
              <%= link_to match.title, matches_event_path(match.event_id) %> </br>
              <%= @teams_for_fixtures[j][0].title unless @teams_for_fixtures[j][0].nil? %> v/s <%= @teams_for_fixtures[j][1].title unless @teams_for_fixtures[j][1].nil? %> </br>
              <%= match.updated_at.strftime("%d-%b-%Y %I:%M %p") unless match.nil? %>
            </li>
            <% j+=1 %>
          <% end %>
      <% else %>
        <li>No Fixtures!</li>
      <% end %>
    </div>
  </div>

  <div class="results">
    <div id="result-scrollable">
      <% if @match_results.any? %>
        <% i = 0 %>
        <% @match_results.each_with_index do |match,index| %>
          <li>
            <% @events.each do |event| %>
              <%= event.title if event.id.eql?(match.event_id) %>
            <% end %> |
            <%= link_to match.title, matches_event_path(match.event_id) %> </br>
            <%= @teams_for_results[i][0].title unless @teams_for_results[i][0].nil? %> v/s <%= @teams_for_results[i][1].title unless @teams_for_results[i][1].nil? %> </br>
            <%= match.result unless match.nil? %> </br>
            <%= match.updated_at.strftime("%d-%b-%Y %I:%M %p") unless match.nil? %>
          </li>
          <% i+=1 %>
        <% end %>
      <% else %>
        <li>No Results!</li>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="photos" style="display: block;">
    <div class="photo-carousel-cointainer" style="">
      <ul id="photo-listing-cointainer">
        <%= render(:partial => 'photo', :collection => @photos) %>
      </ul>
    </div>

    <div class="scroll-left" style="display: block;">&nbsp;</div>
    <div class="scroll-right" style="display: none;">&nbsp;</div>
  </div>
  
</div>

<div class="row">
  <div class="span8 news-updates">
    <h3>News and Recent Updates</h3>
    <ul>
      <li>news1</li>
      <li>news2</li>
      <li>news3</li>
    </ul>
  </div>
  <div class="span3 social">
    <h3>Stay Connected</h3>
    <%= link_to image_tag('social-icons/facebook-social.png'),'https://www.facebook.com/parth.bharadiya', target:"_blank" %>
    <%= link_to image_tag('social-icons/twitter-social.png'),"https://twitter.com/PjBharadiya", target: "_blank" %>
    <%= link_to image_tag('social-icons/googleplus-social.png'),"https://plus.google.com/103631939310981313770/posts", target: "_blank" %>
  </div>
</div>

<%= javascript_include_tag "photo_scroll" %>

<script type="text/javascript">
$("#fixtures").click(function () {
  $(".fixtures").show();
  $(".results").hide();
  $("#fixtures").addClass("active");
  $("#results").removeClass("active");
})

$("#results").click(function () {
  $(".results").show();
  $(".fixtures").hide();
  $("#results").addClass("active");
  $("#fixtures").removeClass("active");
})

$("#fixture-scrollable").smoothDivScroll({
  autoScrollingMode: "onStart"
});

$("#result-scrollable").smoothDivScroll({
  autoScrollingMode: "onStart"
});

</script>
