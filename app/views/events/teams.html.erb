<%= render 'tabs' %>

<h4>Teams</h4>
<% if @teams.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <% @teams.each_with_index do |team,index| %>
          <th><%= team.title %><%= team.description %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @teams.each_with_index do |team,index| %>
          <td>
            <ul>
              <% if team.players.any? %>
                <% team.players.each do |player| %>
                  <li><%= player.name %></li>
                <% end %>
              <% else %>
                No players selected!
              <% end %>
            </ul>
          </td>
        <% end %>
      </tr>
    </tbody>
  </table>
<% else %>
  <p>No Teams selected!</p>
<% end %>

<p><%= link_to 'back', events_path %></p>
