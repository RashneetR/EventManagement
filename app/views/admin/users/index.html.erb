<h2>Listing Admins</h2>
<table>
<% @admin_users.each_with_index do |admin,index| %>
  <tr>
    <td><%= index + 1 %></td>
    <td><%= admin.name %></td>
    <td><%= link_to 'Edit', edit_admin_user_path(admin) %></td>
    <td><%= link_to 'Destroy', admin_user_path(admin), :method => :delete, :confirm => " are you sure?" %></td>
  </tr>
<% end %>
</table>

<h2>Listing Players</h2>
<table>
<% @players.each_with_index do |player,index| %>
  <tr>
    <td><%= index + 1 %></td>
    <td><%= player.email %></td>
    <td><%= link_to 'Edit', edit_admin_user_path(player) %></td>
    <td><%= link_to 'Destroy', admin_user_path(player), :method => :delete, :confirm => " are you sure?" %></td>
  </tr>
<% end %>
</table>

