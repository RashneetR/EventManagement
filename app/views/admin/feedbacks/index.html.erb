<%= form_tag admin_feedbacks_path, :method => 'get', :remote => true, :id => "feedback-form" do %>
  <%= hidden_field_tag :direction, params[:direction] %>
  <%= hidden_field_tag :sort, params[:sort] %>
  <p>
    <%= text_field_tag :search, params[:search], :placeholder => "search by name/email" %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<% if @feedbacks.any? %>
  <div class="feedback-table" id="feedbacks">
    <%= render 'feedbacks' %>
  </div>
<% else %>
  <p>No results found for you search. Try again</p>
<% end %>
