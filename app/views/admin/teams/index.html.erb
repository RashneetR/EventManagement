<h1><%= @event.title.capitalize %>&nbsp;Teams</h1>

<% if @teams.any? %>
  <% @teams.each do |team| %>
    <p>
      Team Name&nbsp;<%= team.title %>
      <%= team.description %>
      <%= link_to 'edit', edit_admin_event_team_path(params[:event_id],team.id)%>
      <%= link_to 'destroy', admin_event_team_path(params[:event_id],team.id), :method => :delete, :confirm => " are you sure?" %>
    </p>
    <% if team.users.any? %>
      <h4>players</h4>
        <ul>
          <% team.users.each do |player| %>
            <li><%= player.name %></li>
          <% end %>
        </ul>
    <% end %>

    <%= form_tag add_player_path(params[:event_id],team.id), :method => :post do %>
      <div class="field">
        <%= select_tag :user_id, options_from_collection_for_select(User.all, :id, :name) %>
        <%= submit_tag "Add" %>
      </div>
    <% end %>
-----------------------------------------
  <% end %>
<% else %>
  <p>Sorry! There is no teams selected yet.</p>
<% end %>

<p><%= button_to "Create a Team", new_admin_event_team_path(@event.id), :method => "get",:disable_with => 'loading...' %></p>

<h1>Rules</h1>
<% if @rules.any? %>
  <% @rules.each_with_index do |rule,index| %>
    <p>
      <%= index + 1 %> >
      <%= rule.description %>
      <%= link_to 'edit', edit_admin_event_rule_path(params[:event_id],rule.id)%>
      <%= link_to 'destroy', admin_event_rule_path(params[:event_id],rule.id), :method => :delete, :confirm => " are you sure?" %>
    </p>
  <% end %>
<% else %>
  <p>Sorry! There is no rules selected yet.</p>
<% end %>

<p><%= button_to "Create a Rule", new_admin_event_rule_path(@event.id), :method => "get",:disable_with => 'loading...' %></p>

