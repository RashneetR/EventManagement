<div id="content">
  <!-- Box -->
  <div class="box">
    <!-- Box Head -->
    <div class="box-head">
      <h2 class="left">Listing Admins</h2>
    </div>
    <!-- End Box Head --> 
      <!-- Table -->
      <div class="table">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr>
            <th>Sr No</th>
            <th>Name</th>
            <th>Email</th>
            <th width="110" class="ac">Content Control</th>
          </tr>
          <% @admin_users.each_with_index do |admin,index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= admin.name %></td>
            <td><%= admin.email %></td>
            <td><%= link_to 'Edit', edit_admin_user_path(admin),:class => "ico edit" if current_user.name != admin.name %>
                <%= link_to 'Destroy', admin_user_path(admin), :class => "ico del", :method => :delete, :confirm => " are you sure?" if current_user.name != admin.name %></td>
          </tr>
          <% end %>
        </table>
      </div>
      <!-- Table -->
  </div>
  <!-- End Box -->

  <!-- Box -->
  <div class="box">
    <!-- Box Head -->
    <div class="box-head">
      <h2 class="left">Listing Players</h2>
    </div>
    <!-- End Box Head --> 
    <% if @players.any? %>
      <!-- Table -->
      <div class="table">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr>
            <th>Sr No</th>
            <th>Name</th>
            <th>Email</th>
            <th width="110" class="ac">Content Control</th>
          </tr>
          <% @players.each_with_index do |player,index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= player.name %></td>
              <td><%= player.email %></td>
              <td><%= link_to 'Edit', edit_admin_user_path(player), :class => "ico edit" if current_user.name != player.name %>
                  <%= link_to 'Destroy', admin_user_path(player), :class => "ico del", :method => :delete, :confirm => " are you sure?" if current_user.name != player.name %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
      <!-- Table -->
    <% else %>
     <p>Sorry! There is no players created yet.</p>
    <% end %>
  </div>
  <!-- End Box -->
   <p><%= link_to 'back',admin_path %></p>
</div>

<!-- Sidebar -->
  <div id="sidebar">
    <!-- Box -->
    <div class="box">
      <div class="box-head">
        <h2>Management</h2>
      </div>
      <div class="box-content">
        <%= link_to content_tag(:span, "Create User"), new_admin_user_path, :class => "add-button", :method => "get" %>
        <div class="cl">&nbsp;</div>
      </div>
    </div>
    <!-- End Box -->
  </div>
<!-- End Sidebar -->
