<h1>Edit User</h1>

<%= form_for [:admin, @user] do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= render 'fields', f: f %>
  <div class="actions"><%= f.submit %></div>
<% end %>

<p><%= link_to 'back',admin_users_path %></p>
