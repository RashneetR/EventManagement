<h1>Create an Event</h1>
</br>
<%= form_for [:admin, @event] do |f| %>
  <p>
  <%= f.label :title %>
  <%= f.text_field :title %></p>
  <p>
  <%= f.label :description %>
  <%= f.text_field :description %></p>
  <p>
  <%= f.label :starts_at %>
  <%= f.datetime_select :starts_at, :ampm => true, :minute_step => 15 %></p>
  <p>
  <%= f.label :ends_at %>
  <%= f.datetime_select :ends_at, :ampm => true, :minute_step => 15 %></p>
  <p>
  <%= f.submit %></p>

<% end %>


