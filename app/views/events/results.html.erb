<style type="text/css">
table {
  border:1px solid;
  border-collapse:collapse;
}
th {
  border:1px solid;
  border-color: #000080;
}
td {
  border:1px solid;
  border-color: #000080;
  text-align: center;
}
</style>

<%= render 'tabs' %>

<h3>Results</h3>
<% if @teams.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th >Sr No.</th>
        <th>Team Name</th>
        <th>Played</th>
        <th>Won</th>
        <th>Lost</th>
        <th>Tie</th>
        <th>NR</th>
        <th>Points</th>
        <th>NRR</th>
      </tr>
    </thead>
    <% @teams.each_with_index do |team,index| %>
      <% unless team.result.nil? %>
        <tbody>
          <tr>
            <td><%= index +1 %></td>
            <td style="text-align: left;"><%= team.title %><%= team.description %></td>
            <td><%= team.result.played %></td>
            <td><%= team.result.won %></td>
            <td><%= team.result.lost %></td>
            <td><%= team.result.tie %></td>
            <td><%= team.result.nr %></td>
            <td><%= team.result.points %></td>
            <td><%= team.result.nrr %></td>
          </tr>
        </tbody>
      <% end %>
    <% end %>
  </table>
<% else %>
  No results!
<% end %>

<p><%= link_to 'back', event_path(@event.id) %></p>
