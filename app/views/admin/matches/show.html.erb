<div class="shell"><%= render 'admin/shared/tabs' %></div>

<div class="content">
  <div class="box">
      <div class="box-head">
        <h2><%= @match.title %>
            <strong>&nbsp;<%= @teams[0].title unless @teams[0].nil? %> <b>v/s</b> <%= @teams[1].title unless @teams[1].nil? %></strong>
            <%= link_to 'edit', edit_admin_event_match_path(params[:event_id],@match.id), :class => "ico edit" %>
            <%= link_to 'destroy', admin_event_match_path(params[:event_id],@match.id), :class => "ico del", :method => :delete, :confirm => "Are you sure?" %>
        </h2>
      </div>
      <div class="box-content">
        <%= raw @match.description %>
        <% if @match.result.nil? || @match.result == 'nil' %>
          <p>No match played!</p>
        <% else %>
          <p>Match Result : <%= @match.result %></p>
        <% end %>
      </div>
  </div>
</div>
<p><%= link_to 'back', admin_event_matches_path(params[:event_id]) %></p>