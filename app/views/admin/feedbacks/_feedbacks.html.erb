<table>
  <tr> 
    <td>
      Sr No.
    </td>
    <td >
      Feedback
    </td>
    <td>
      <%= sortable 'name' %>
    </td>
    <td>
      <%= sortable 'email' %>
    </td>
    <td>
      Created at
    </td>
  </tr>
  <% @feedbacks.each_with_index do |feedback, index| %>
    <tr>
      <td>
        <%= index +1 %>
      </td>
      <td>
        <%= feedback.feedback %>
      </td>
      <td>
        <%= feedback.name %>
      </td>
      <td>
        <%= mail_to "#{feedback.email}" %>
      </td>
      <td>
        <%= feedback.created_at.strftime("%d-%b-%Y %I:%M %p") %>
      </td>
    </tr>
  <% end %>
</table>