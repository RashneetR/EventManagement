<div id="content">
  <!-- Box -->
  <div class="box">
    <!-- Box Head -->
    <div class="box-head">
      <h2 class="left">Events</h2>
    </div>
    <!-- End Box Head --> 
    <% if @events.any? %>
      <!-- Table -->
      <div class="table">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr>
            <th>Sr No</th>
            <th>Title</th>
            <th>Date created at</th>
            <th>Added by</th>
            <th width="110" class="ac">Content Control</th>
          </tr>
          <% @events.each_with_index do |event,index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= link_to "#{event.title.titleize}", admin_event_matches_path(event.slug) %></td>
            <td><%= event.created_at.strftime("%d-%b-%Y") %></td>
            <td>Administrator</td>
            <td>
              <%= link_to 'Edit', edit_admin_event_path(event), :class => "ico edit" %>
              <%= link_to 'Destroy', admin_event_path(event), :class => "ico del", :method => :delete, :confirm => " Are you sure, you want to delete this event?" %>
            </td>
          <% end %>
        </table>
      </div>
      <!-- Table -->
    <% else %>
     <p>Sorry! There is no events created yet.</p>
    <% end %>
  </div>
  <!-- End Box -->
   <p><%= link_to 'back',admin_path %></p>
</div>

<!-- Sidebar -->
  <div id="sidebar">
    <!-- Box -->
    <div class="box">
      <div class="box-head">
        <h2>Management</h2>
      </div>
      <div class="box-content">
        <%= link_to content_tag(:span, "Create an Event"), new_admin_event_path, :class => "add-button", :method => "get" %>
        <div class="cl">&nbsp;</div>
      </div>
    </div>
    <!-- End Box -->
  </div>
<!-- End Sidebar -->