<header>
<div class="container clearfix">
  <div class="row">
    <div class="navbar navbar_">
      <div class="container">
        <h1 class="brand"><%= link_to "Event Management", root_path %></h1>
        <%= link_to "","#",:class => "btn btn-navbar btn-navbar_", :data => {:toggle => "collapse", :target => ".nav-collapse_"} %>
        <div class="nav-collapse nav-collapse_  collapse">
          <ul class="nav sf-menu">
            <li><%= link_to 'Home', root_path %></li>
            <li class="menu"><%= link_to 'Events', events_path %>
            <% if @events.any? %>
              <ul class="submenu">
                <% @events.each do |event| %>
                <li><%= link_to "#{event.title.titleize}", matches_event_path(event.slug) %></li>
                <% end %>
              </ul>
            <% end %>
            </li>
            <li><%= link_to 'Photos', photos_path %></li>
            <li><%= link_to 'Contact', "#" %></li>
            <li><%= link_to 'About us', "#" %></li>
            <li><%= link_to 'Feedback', "#", :id => "create-feedback" %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
</header>

<%= render 'shared/feedback_form' %>

<%= javascript_include_tag "submit_feedback" %>
