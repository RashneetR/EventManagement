<%= render 'tabs' %>

<h3>Teams</h3>
<% if @teams.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <% @teams.each_with_index do |team,index| %>
          <th><%= team.title %><%= team.description %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @teams.each_with_index do |team,index| %>
          <td>
            <ul>
              <% if team.players.any? %>
                <% team.players.each do |player| %>
                  <li><%= player.name %></li>
                <% end %>
              <% else %>
                No players selected!
              <% end %>
            </ul>
          </td>
        <% end %>
      </tr>
    </tbody>
  </table>
<% else %>
  No Teams selected!
<% end %>

<p><%= link_to 'back', event_path(@event.id) %></p>
