<style type="text/css">
#dialog-form {
  font-size: 62.5%;
  display: none;
}
.required:after {
  content:"*";
  color: red;
}
.validateTips {
  color: red;
}
#new_feedback table {
  border: none !important;
}
#new_feedback td {
  border: none !important;
  padding: 2px;
  text-align: left;
}
#feedback_feedback {
  max-width: 430px;
  max-height: 117px;
  min-height: 76px;
  min-width: 190px;
}
#nav {
  margin: 32px;
}
#nav, #nav ul{
  padding: 0;
  list-style-type:none;
  list-style-position:outside;
  position:relative;
  line-height:1.5em;
}
#nav ul {
  margin: 33px 0 0 1px;
}
#nav a:link, #nav a:active, #nav a:visited{
  display:block;
  padding:0px 5px;
  color: #000;
  text-decoration:none;
  background-color: #87CEEB;
  border:1px solid #87CEEB;
  outline: none;
}

#nav a:hover{
  background-color:#fff;
  color: red;
  border-radius: 5px 5px 0px 0px;
}
#nav li{
  float:left;
  position:relative;
}
#nav ul {
  position:absolute;
  width:12em;
  top: -0.7em;
  display:none;
}
#nav li ul a{
  width:12em;
  float:left;
}
#nav ul ul{
  top:auto;
  }

#nav li ul ul {
  left:12em;
  margin:0px 0 0 10px;
}

#nav li:hover ul ul, #nav li:hover ul ul ul, #nav li:hover ul ul ul ul{
  display:none;
}
#nav li:hover ul, #nav li li:hover ul, #nav li li li:hover ul, #nav li li li li:hover ul{
  display:block;
}

</style>
<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <%= link_to "Event Management", root_path , :class => "brand" %>
      <div class="nav-collapse collapse">
        <ul class="nav" id="nav">
          <li><%= link_to 'Home', root_path %></li>
          <li><%= link_to 'Events', events_path %>
            <ul>
              <% @events.each do |event| %>
                <li><%= link_to "#{event.title.titleize}", event_path(event.id) %></li>
              <% end %>
          </ul>
          </li>
          <li><%= link_to 'Photos', photos_path %></li>
          <li><%= link_to 'Contact us', "#" %></li>
          <li><%= link_to 'About us', "#" %></li>
          <li>
            <span id="create-feedback">
              <%= link_to 'Feedback', "#" %>
            </span>
          </li>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </div>
</div>
<p id="alert_success" class="alert_success">Thank you for your valuable Feedback!</p>

<div id="dialog-form" title="Feedback Form">
  <p class="validateTips">* indicates required fields.</p>

  <%= form_for @feedback, :url => feedback_index_path, :remote => true do |f| %>
    <table>
      <tr>
        <td><%= f.label :Name %></td>
        <td><%= f.text_field :name %></td>
      </tr>

      <tr>
        <td><%= f.label :Email, :class => "required" %></td>
        <td><%= f.text_field :email %></td>
      </tr>

      <tr>
        <td><%= f.label :Feedback , :class => "required" %></td>
        <td><%= f.text_area :feedback, :size => "60x4" %></td>
      </tr>
    </table>
  <% end %>
</div>

<%= javascript_include_tag "submit_feedback" %>
