<%= render 'tabs' %>

<h4>Results</h4>
<% if @teams.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th >Sr No.</th>
        <th>Team Name</th>
        <th>Played</th>
        <th>Won</th>
        <th>Lost</th>
        <th>Tie</th>
        <th>NR</th>
        <th>Points</th>
        <th>NRR</th>
      </tr>
    </thead>
    <% @teams.each_with_index do |team,index| %>
      <% unless team.result.nil? %>
        <tbody>
          <tr>
            <td><%= index +1 %></td>
            <td style="text-align: left;"><%= team.title %><%= team.description %></td>
            <td><%= team.result.played %></td>
            <td><%= team.result.won %></td>
            <td><%= team.result.lost %></td>
            <td><%= team.result.tie %></td>
            <td><%= team.result.nr %></td>
            <td><%= team.result.points %></td>
            <td><%= team.result.nrr %></td>
          </tr>
        </tbody>
      <% end %>
    <% end %>
  </table>
<% else %>
  <p>No results!</p>
<% end %>

<p><%= link_to 'back', events_path %></p>
