<h1>Events</h1>

<table border=1>
  <tr>
    <th>No.</th>
    <th>Event</th>
    <th>Description</th>
    <th>Venue</th>
    <th>Starts at</th>
    <th>Ends at</th>
  </tr>
  <% @events.each_with_index do |event,index| %>
  <tr>
    <td><%= index + 1 %></td>
    <td><%= link_to "#{event.title.capitalize}", show_teams_event_path(event.id) %></td>
    <td><%= event.description %></td>
    <td><%= event.venue %></td>
    <td><%= event.starts_at %></td>
    <td><%= event.ends_at  %></td>
  </tr>
  <% end %>
</table>

<p><%= link_to 'back', root_path %></p>