<div class="shell"><%= render 'admin/shared/tabs' %></div>

<div class="msg msg-error">
  <% @match.errors.full_messages.each do |error| %>
    <p><strong><%= error %></strong></p>
  <% end %>
</div>
<div class="content">
<!-- Box -->
  <div class="box">
    <div class="box-head">
      <h2>Edit <%= @match.title %>
      </h2>
    </div>
    <%= form_for [:admin,:event, @match],:url => admin_event_match_path(params[:event_id],@match) do |f| %>
      <p>
        <%= f.label :title %>
        <%= f.text_field :title, :placeholder => "e.g match- 1" %>
      </p>

      <p>
        <%= f.label :description %>
        <%= f.cktext_area :description, :ckeditor => {:uiColor => "#E0E0E0"} %>
      </p>

      <p>
        <%= f.label :first_team %>
        <%= f.select :t1, options_from_collection_for_select(@teams, :id, :title, @match.t1), :prompt=> "--select first team--" %>
      </p>

      <p>
        <%= f.label :second_team %>
        <%= f.select :t2, options_from_collection_for_select(@teams, :id, :title, @match.t2),:prompt=> "--select second team --" %>
      </p>

      <p>
        <%= f.label :result_who_won? %>
        <%= f.text_field :result %>
      </p>

      <%= f.submit  :class => "add-button" %>
      <div class="cl">&nbsp;</div>
    <% end %>
  </div>
<!-- End Box -->
</div>
<p><%= link_to 'back',admin_event_matches_path %></p>
