<% unless @team_result.nil? %>
  <b><%= match_team %></b>&nbsp;
  Played : <%= @team_result.played %>&nbsp;<%= link_to image_tag("plus_one.png"), match_team_result_path(params[:event_id], @team_result.team_id, :result_action => "played", :match_id => @match.id) %>&nbsp;

  Won : <%= @team_result.won %>&nbsp;<%= link_to image_tag("plus_one.png"), match_team_result_path(params[:event_id], @team_result.team_id, :result_action => "won", :match_id => @match.id) %>&nbsp;

  Lost : <%= @team_result.lost %>&nbsp;<%= link_to image_tag("plus_one.png"), match_team_result_path(params[:event_id], @team_result.team_id, :result_action => "lost", :match_id => @match.id) %>&nbsp;

  Tie : <%= @team_result.tie %>&nbsp;<%= link_to image_tag("plus_one.png"), match_team_result_path(params[:event_id], @team_result.team_id, :result_action => "tie", :match_id => @match.id) %>&nbsp;

  NR : <%= @team_result.nr %>&nbsp;<%= link_to image_tag("plus_one.png"), match_team_result_path(params[:event_id], @team_result.team_id, :result_action => "nr", :match_id => @match.id) %>&nbsp;

  Points : <%= @team_result.points %>&nbsp;

  NRR : <%= @team_result.nrr %>&nbsp;

  <%= link_to "Reset Result", reset_result_path(params[:event_id],@team_result.team_id,:match_id => @match.id), :confirm => "Are You sure " if @team_result.played != 0 %></br>
<% else %>
  No result populated!
<% end %>
