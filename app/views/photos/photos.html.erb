<style type="text/css">
table {
  font-size: 9px;
  color: #4C4C4C;
  border: dashed 1px;
}
td {
  padding: 4px;
}
</style>

<table>
  <tr>
    <% @photos.each do |photo| %>
    <td>
      <%= link_to(image_tag(photo.image.url(:thumb)),"#{photo.image.url(:full).split('?').first}", :data => {:lightbox => "photo-modal"}, :title => photo.title) %>
    </td>
    <% end %>
  </tr>
  <tr>
    <% @photos.each do |photo| %>
    <td>
      <%= photo.image_updated_at.strftime("%d-%b-%Y, %I:%M %p") %>
    </td>
    <% end %>
  </tr>
</table>