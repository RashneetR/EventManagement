<p>
  <%= f.label :title %>
  <%= f.text_field :title, :placeholder => "add a photo title" %>
</p>

<p>
  <%= f.label :image %>
  <%= f.file_field :image %>
  <span class="hint">Hint : upload image of size 576 X 324 </span>
</p>

<p>
  <%= f.label :event %>
  <%= f.select :event_id, options_from_collection_for_select(@events, :id, :title, @photo.event_id), :prompt=> "--select event--" %>
</p>
