<!DOCTYPE html>
<html>
<head>
  <title>EventManagement</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if logged_in? %>
  <span>
    <p style="text-align: right">Logged in as <b><%= current_user.name %></b>
    <%= link_to 'Logout', logout_path %></p>
    <%= link_to 'Admin Panel', admin_path %>
  <% end %>
  </span>
  <p><%= link_to 'Home', root_path %></p>

  <div id="container">
    <% flash.each do |name,msg| %>
      <%= content_tag(:div, msg, :id => "flash_#{name}")%>
    <% end %>

    <%= yield %>
  </div>
</body>
</html>
