<div class="shell"><%= render 'admin/shared/tabs' %></div>

<div class="msg msg-error">
  <% @rule.errors.full_messages.each do |error| %>
    <p><strong><%= error %></strong></p>
  <% end %>
</div>
<div class="content">
<!-- Box -->
  <div class="box">
    <div class="box-head">
      <h2>Edit a Rule</h2>
    </div>
    <%= form_for [:admin,:event, @rule],:url => admin_event_rule_path(params[:event_id],@rule) do |f| %>
      <%= render 'fields', f: f %>
      <%= f.submit  :class => "add-button" %>
      <div class="cl">&nbsp;</div>
    <% end %>
  </div>
<!-- End Box -->
</div>

<p><%= link_to 'back',admin_event_rules_path %></p>
