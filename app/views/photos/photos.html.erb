<div class="row">
  <ul class="thumbnails thumbnails-1">
    <% @photos.each do |photo| %>
      <li>
        <%= link_to(image_tag(photo.image.url(:thumb)),"#{photo.image.url(:full).split('?').first}", :data => {:lightbox => "photo-modal"}, :title => photo.title) %>
      </li>
    <% end %>
  </ul>
</div>
